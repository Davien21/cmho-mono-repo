amends "package://github.com/jdx/hk/releases/download/v1.25.0/hk@1.25.0#/Config.pkl"

hooks {
    ["pre-commit"] {
        stash = "git" // stashes unstaged changes while running fix steps
        steps {
            // Update lock file when package.json changes
            ["pnpm-install"] {
                glob = List("**/package.json", "package.json")
                // Run pnpm install and stage the updated lock file
                check = "pnpm install && git add pnpm-lock.yaml"
            }
        }
    }
}
